<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Cho phép HTTP cho domain server của bạn -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">157.245.155.77</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
    
    <!-- Cho phép cleartext traffic cho tất cả (bao gồm IP addresses) -->
    <!-- Lưu ý: Chỉ dùng cho development. Production nên dùng HTTPS -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
